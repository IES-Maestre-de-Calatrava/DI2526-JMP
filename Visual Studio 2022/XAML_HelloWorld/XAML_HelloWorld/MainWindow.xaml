<Window x:Class="XAML_HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XAML_HelloWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock x:Name="txtHola" Text="¡Hola Mundo!"
                       FontSize="24" Foreground="Blue" TextAlignment="Center" Margin="0,0,0,10"/>
            <TextBox x:Name="txtEntrada" Width="200" Height="25" Margin="0,0,0,10"/>
            <Button Content="Cambiar texto" Width="120" Click="BtnCambiarTexto_Click"/>
        </StackPanel>
    </Grid>
</Window>
