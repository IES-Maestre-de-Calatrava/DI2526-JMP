<Window x:Class="Mi_Panel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mi_Panel"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="700">


    <DockPanel LastChildFill="True">

        <StackPanel DockPanel.Dock="Left" 
                Orientation="Vertical" 
                Width="100" 
                Background="DarkBlue">

            <Image Source="imagen.png" 
               Width="70" 
               Height="70" 
               Margin="10"/>

            <Button Content="Home" 
                Margin="10" 
                Background="Aquamarine" 
                Foreground="White"/>

            <Label Content="Dashboard" 
               Margin="10" 
               HorizontalAlignment="Center" 
               Foreground="White" />

            <Label Content="Reports" 
               Margin="10" 
               HorizontalAlignment="Center" 
               Foreground="White"/>

            <Label Content="Settings" 
               Margin="10" 
               HorizontalAlignment="Center" 
               Foreground="White"/>

        </StackPanel>

        <DockPanel DockPanel.Dock="Top" 
               Height="50" 
               LastChildFill="False" 
               Background="LightGray">

            <Label Content="October 21, 2025" 
               DockPanel.Dock="Right" 
               Margin="5" 
               FontWeight="Bold"/>

            <Label Content="Mi Panel" 
               DockPanel.Dock="Left" 
               Margin="5" 
               FontWeight="Bold"/>

        </DockPanel>

        <Grid Width="200" Height="200" HorizontalAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Content="Boton 1" Grid.Column ="0" Background="Purple" Height="50" Width="50"/>
            <Button Content="Boton 2" Grid.Column ="1" Background="Purple" Height="50" Width="50"/>
            <Button Content="Boton 3" Grid.Column ="2" Background="Purple" Height="50" Width="50"/>




        </Grid>





    </DockPanel>

</Window>
