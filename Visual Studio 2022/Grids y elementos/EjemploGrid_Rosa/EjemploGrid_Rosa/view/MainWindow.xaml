<Window x:Class="EjemploGrid_Rosa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjemploGrid_Rosa"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="3.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="1" TabStripPlacement="Left">
            <TabItem Header="Ejercicio1">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="29*"/>
                            <RowDefinition Height="208*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.5*"/>
                            <ColumnDefinition Width="2.5*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Margin="15,0,164,0" Grid.RowSpan="2">
                            <Label x:Name="lbNombre" Content="Nombre"/>
                            <TextBox x:Name="txtNombre" Width="138"/>
                            <Label x:Name="lbApellido" Content="Apellido"/>
                            <TextBox x:Name="txtApellido" Width="139" Margin="10"/>
                            <Label x:Name="lbEdad" Content="Edad"/>
                            <TextBox x:Name="txtEdad" Width="144" Margin="10"/>

                        </StackPanel>



                        <DataGrid x:Name="dgvPersonas" Grid.Column="1" Margin="26,20,20,20" SelectionChanged="dgvPersonas_SelectionChange" Grid.RowSpan="2" AutoGenerateColumns="False">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}"/>

                                <DataGridTextColumn Header="Apellido" Binding="{Binding Apellidos}" />

                                <DataGridTextColumn Header="Edad" Binding="{Binding Edad}" />

                                <DataGridTextColumn Header="Fecha Nacimiento" Binding="{Binding Fecha_nacimiento, StringFormat=\{0:dd/MM/yyyy\}}" />

                                <DataGridTextColumn Header="Altura" Binding="{Binding Altura}" />

                                <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" />

                            </DataGrid.Columns>

                        </DataGrid>
                        
                        
                        <Label Content="Seleccione Fecha" HorizontalAlignment="Left" Margin="15,153,0,0" VerticalAlignment="Top" Width="120" Grid.Row="1" />
                        <DatePicker x:Name="dpFecha" HorizontalAlignment="Left" Margin="24,174,0,0" VerticalAlignment="Top" Grid.Row="1" Width="165" />

                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnAdd" Grid.Column="0" Content="Agregar" HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="168" Background="#FFC3CAFF" BorderBrush="Black" BorderThickness="1.5" Click="btnAdd_Click"/>
                        <Button x:Name="btnUpdate" Grid.Column="1" Content="Modificar" HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="168" Background="#FFC3CAFF" BorderBrush="Black" BorderThickness="1.5" Click="btnUpdate_Click"/>
                        <Button x:Name="btnDelete" Grid.Column="2" Content="Eliminar" HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="168" Background="#FFC3CAFF" BorderBrush="Black" BorderThickness="1.5" Click="btnDelete_Click"/>
                    </Grid>
                    <Label Content="Altura" HorizontalAlignment="Left" Margin="209,0,0,0" VerticalAlignment="Top"/>
                    <Label Content="Telefono" HorizontalAlignment="Left" Margin="211,48,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name ="txtAltura" HorizontalAlignment="Left" Margin="211,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name ="txtTelefono" TextWrapping="Wrap" Margin="211,79,399,129"/>
                </Grid>
            </TabItem>
            <TabItem Header="Ejercicio2">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="2.5*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <ComboBox x:Name="cbFiltro" VerticalAlignment="Top" Margin="10,10,570,0">
                            <ComboBoxItem x:Name="ciFiltroNombre" Content="Filtrar por Nombre"/>
                            <ComboBoxItem x:Name="ciFiltroApellido" Content="Filtrar por Apellido"/>
                            <ComboBoxItem  x:Name="ciFiltroEdad" Content="Filtrar por Edad"/>
                            <ComboBoxItem x:Name="ciFiltroFecha" Content="Filtrar por Fecha"/>
                        </ComboBox>
                        <TextBox x:Name="txtFiltro" Margin="178,7,489,61" Height="27" TextChanged="txtFiltro_TextChanged"/>


                        <ComboBox x:Name="cbOrden" VerticalAlignment="Top" Margin="10,47,570,0">
                            <ComboBoxItem x:Name="ciOrdenNombre" Content="Name"/>
                            <ComboBoxItem x:Name="ciOrdenApellido" Content="Surname"/>
                            <ComboBoxItem  x:Name="ciOrdenEdad" Content="Age"/>
                        </ComboBox>
                        <Button x:Name="Sort" Content="SORT" Margin="178,44,462,24" Height="27" Click="Sort_Click"/>


                        <ComboBox Name="cbFiltroEdad" Margin="259,7,239,61" Height="27" SelectionChanged="cbFiltroEdad_SelectionChanged">
                            <ComboBoxItem x:Name="ciOlderThan" Content="Older than the entered age"/>
                            <ComboBoxItem x:Name="ciYoungerThan" Content="Younger than the entered age"/>
                            <ComboBoxItem x:Name="ciExactly" Content="Exactly that age"/>
                        </ComboBox>

                        <Button x:Name="btnMaximo" Content="Edad Máxima" Margin="0,47,21,21" Height="27" Width="100" HorizontalAlignment="Right" Click="BtnMaximo_Click"/>
                        <Button x:Name="btnMostrarTodos" Content="Mostrar Todos" Margin="0,10,21,58" Height="27" Width="100" HorizontalAlignment="Right" Click="BtnMostrarTodos_Click"/>
                    </Grid>

                    <Grid Grid.Row="1">
                        <DataGrid x:Name="dgvPersonasEdad" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="20"/>
                    </Grid>

                </Grid>

            </TabItem>
        </TabControl>
    </Grid>
</Window>
