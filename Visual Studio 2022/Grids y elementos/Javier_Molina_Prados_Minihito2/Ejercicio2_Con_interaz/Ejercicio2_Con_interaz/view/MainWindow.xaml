<Window x:Class="Ejercicio2_Con_interaz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio2_Con_interaz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <TabControl Grid.Row="1" TabStripPlacement="Top">
                <TabItem Header="Ranking">
                    <Grid Background="#FFE5E5E5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2.5*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="49*"/>
                                <ColumnDefinition Width="304*"/>
                            </Grid.ColumnDefinitions>
                            <DataGrid x:Name="dgvPartidas" Margin="55,22,279,61" AutoGenerateColumns="False" SelectionChanged="dgvPartidas_SelectionChange" Grid.ColumnSpan="2">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Nickname" Binding="{Binding Nickname}"/>
                                    <DataGridTextColumn Header="Fecha Juego" Binding="{Binding Fecha_juego}"/>
                                    <DataGridTextColumn Header="Nivel Jugador" Binding="{Binding Nivel}"/>
                                    <DataGridTextColumn Header="Puntuacion Obtenida" Binding="{Binding Puntuacion}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="btnAdd" Grid.Column="0" Content="Publicar" HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="168" Background="#FFC3CAFF" BorderBrush="Black" BorderThickness="1.5" Click="btnAdd_Click"/>
                            <Button x:Name="btnUpdate" Grid.Column="1" Content="Modificar" HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="168" Background="#FFC3CAFF" BorderBrush="Black" BorderThickness="1.5" Click="btnUpdate_Click"/>
                            <Button x:Name="btnDelete" Grid.Column="2" Content="Eliminar" HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="168" Background="#FFC3CAFF" BorderBrush="Black" BorderThickness="1.5" Click="btnDelete_Click"/>
                        </Grid>
                        <TextBox x:Name="txtNickname"  HorizontalAlignment="Left" Margin="602,55,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                        <TextBox x:Name="txtPuntuacion" HorizontalAlignment="Left" Margin="603,109,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                        <Label x:Name="lbNombre" Content="Nickname" HorizontalAlignment="Left" Margin="602,24,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.596,-0.007"/>
                        <Label x:Name="lbApellidos" Content="Puntuacion" HorizontalAlignment="Left" Margin="603,78,0,0" VerticalAlignment="Top"/>
                        <Label Content="Nivel de Jugador" HorizontalAlignment="Left" Margin="602,169,0,0" VerticalAlignment="Top"/>

                        <ComboBox x:Name="cb" HorizontalAlignment="Left" Margin="602,196,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cb_SelectionChanged" >
                            <ComboBoxItem x:Name="principiante" Content="Principiante"></ComboBoxItem>
                            <ComboBoxItem x:Name="intermedio" Content="Intermedio"></ComboBoxItem>
                            <ComboBoxItem x:Name="avanzado" Content="Avanzado"></ComboBoxItem>
                            <ComboBoxItem x:Name="experto" Content="Experto"></ComboBoxItem>
                            <ComboBoxItem x:Name="maestro" Content="Maestro"></ComboBoxItem>
                        </ComboBox>
                        <DatePicker x:Name="dpFecha" HorizontalAlignment="Left" Margin="591,140,0,0" VerticalAlignment="Top"/>
                        <Label Content="JUGADOR" HorizontalAlignment="Left" Margin="599,0,0,0" VerticalAlignment="Top" FontSize="18"/>

                    </Grid>
                </TabItem>



                <TabItem Header="Inicializacion">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="387*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="4*"/>
                        </Grid.RowDefinitions>

                        <Grid x:Name="contenedor" ShowGridLines="True" Grid.Column="1" Margin="98,21,135,10" Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                        </Grid>

                        <Label Grid.Column="1" Content="Numero de paredes" HorizontalAlignment="Left" Margin="22,0,0,0" VerticalAlignment="Top"/>
                        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="22,26,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
                        <Button Grid.Column="1" Content="+" HorizontalAlignment="Left" Margin="168,13,0,0" VerticalAlignment="Top" Width="36" Height="16"/>
                        <Label Grid.Column="1" Content="Numero de ratones" HorizontalAlignment="Left" Margin="274,0,0,0" VerticalAlignment="Top"/>
                        <Button Grid.Column="1" Content="+" HorizontalAlignment="Left" Margin="412,10,0,0" VerticalAlignment="Top" Width="36" Height="16"/>
                        <Button Content="-" HorizontalAlignment="Left" Margin="412,35,0,0" VerticalAlignment="Top" Height="16" Width="36" Grid.Column="1"/>
                        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="274,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                        <Button Grid.Column="1" Content="Iniciar Juego" HorizontalAlignment="Left" Margin="661,36,0,0" VerticalAlignment="Top"/>
                        <Image  Grid.Column="1" HorizontalAlignment="Left" Height="100" Margin="661,144,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100"/>
                        <Grid Grid.Column="1" Grid.Row="1"/>
                        <Grid Grid.Column="1" Margin="61,56,59,0" Grid.RowSpan="2"/>

                    </Grid>

                </TabItem>
            </TabControl>
        </Grid>
        <Label Content="SERPIENTES" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36"/>

    </Grid>
</Window>
