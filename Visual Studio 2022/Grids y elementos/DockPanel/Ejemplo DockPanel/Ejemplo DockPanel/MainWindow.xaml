<Window x:Class="Ejemplo_DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejemplo_DockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="400">
    <DockPanel Name="contenedor">
        <Button      Content="BTN 1 1" DockPanel.Dock="Top" Width="50"/>
        <Button      Content="BTN 0 2" DockPanel.Dock="Bottom" Width="50"/>
        <Label       Content="Label1" DockPanel.Dock="Left"/>
        <Label       Content="Label2" DockPanel.Dock="Left"/>
        <Label       Content="Label3" DockPanel.Dock="Left"/>
        <Label       Content="Label4" DockPanel.Dock="Top"/>


        <TextBox     Text="TextBox" DockPanel.Dock="Right" Height="20"/>
        <RadioButton Content="RadioButton" Width="95"/>
    </DockPanel> 
</Window>
