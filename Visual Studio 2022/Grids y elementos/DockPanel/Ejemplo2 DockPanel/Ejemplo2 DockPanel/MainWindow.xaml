<Window x:Class="Ejemplo2_DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejemplo2_DockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="250">
    <DockPanel>
        <Button Content="Left" DockPanel.Dock="Left" Width="50"/>
        <Button Content="Top" DockPanel.Dock="Top" Height="50"/>
        <Button Content="Right"  DockPanel.Dock="Right" Width="50"/>
        <Button Content="Bottom" DockPanel.Dock="Bottom" Height="50"/>
        <Button Content="Center"/>
    </DockPanel>
</Window>
