<Window x:Class="Ejemplo_linq.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejemplo_linq"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Edad mínima:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtEdadMínima" Width="50" Margin="0,0,10,0"/>
            <Button Content="Filtrar" Click="BtnFiltrar_Click" Width="70"/>
            <Button Content="Mostrar todos" Click="BtnMostrarTodos_Click" Width="100" Margin="10,0,0,0"/>
        </StackPanel>
        <DataGrid x:Name ="dgvPersonas" Grid.Row="1" AutoGenerateColumns="True"/>

    </Grid>
</Window>
