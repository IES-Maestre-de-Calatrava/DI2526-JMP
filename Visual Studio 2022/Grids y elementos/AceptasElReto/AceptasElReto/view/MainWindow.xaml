<Window x:Class="AceptasElReto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AceptasElReto"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <TabControl  Grid.Row="1" TabStripPlacement="Left">
            <TabItem Header="Inicio"></TabItem>


            <TabItem Header="Participantes">

                <Grid>
                    <TabControl Grid.Row="1" TabStripPlacement="Top">
                        <TabItem Header="Alumnado">
                            <Grid Background="#FFE5E5E5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2.5*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="49*"/>
                                        <ColumnDefinition Width="304*"/>
                                    </Grid.ColumnDefinitions>
                                    <DataGrid x:Name="dgvPersonas" Margin="54,59,280,24" SelectionChanged="dgvPersonas_SelectionChange" AutoGenerateColumns="false" Grid.ColumnSpan="2">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="nombre" Binding="{Binding Nombre}"/>
                                            <DataGridTextColumn Header="apellidos" Binding="{Binding Apellidos}"/>
                                            <DataGridTextColumn Header="Grupo" Binding="{Binding Grupo}"/>
                                            <DataGridTextColumn Header="Curso" Binding="{Binding NombreCurso}"/>
                                        </DataGrid.Columns>

                                    </DataGrid>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="btnAdd" Grid.Column="0" Content="Agregar" HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="168" Background="#FFC3CAFF" BorderBrush="Black" BorderThickness="1.5" Click="btnAdd_Click"/>
                                    <Button x:Name="btnUpdate" Grid.Column="1" Content="Modificar" HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="168" Background="#FFC3CAFF" BorderBrush="Black" BorderThickness="1.5" Click="btnUpdate_Click"/>
                                    <Button x:Name="btnDelete" Grid.Column="2" Content="Eliminar" HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="168" Background="#FFC3CAFF" BorderBrush="Black" BorderThickness="1.5" Click="btnDelete_Click"/>
                                </Grid>
                                <TextBox x:Name="Search" HorizontalAlignment="Left" Margin="54,32,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="372" Height="20"/>
                                <TextBox x:Name="txtNombre"  HorizontalAlignment="Left" Margin="450,93,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                                <TextBox x:Name="txtApellido" HorizontalAlignment="Left" Margin="450,147,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                                <Label x:Name="lbNombre" Content="Nombre" HorizontalAlignment="Left" Margin="450,59,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.596,-0.007"/>
                                <Label x:Name="lbApellidos" Content="Apellidos" HorizontalAlignment="Left" Margin="450,116,0,0" VerticalAlignment="Top"/>
                                <Label Content="Curso" HorizontalAlignment="Left" Margin="450,170,0,0" VerticalAlignment="Top"/>

                                <ComboBox x:Name="cb" HorizontalAlignment="Left" Margin="450,201,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cb_SelectionChanged" >
                                    <ComboBoxItem x:Name="SCI1" Content="SCI 1"></ComboBoxItem>
                                    <ComboBoxItem x:Name="SCI2" Content="SCI 2"></ComboBoxItem>
                                </ComboBox>
                                <Label Content="Buscar" HorizontalAlignment="Left" Margin="54,6,0,0" VerticalAlignment="Top"/>

                            </Grid>
                        </TabItem>



                        <TabItem Header="Grupos">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <DataGrid x:Name="dgvAlumnosSinGrupo" Margin="226,40,291,98" AutoGenerateColumns="false" Grid.RowSpan="2">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="nombre" Binding="{Binding Nombre}"/>
                                        <DataGridTextColumn Header="apellidos" Binding="{Binding Apellidos}"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <DataGrid x:Name="dgvAlumnosEnGrupo" Margin="440,40,72,98" AutoGenerateColumns="false" Grid.RowSpan="2">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="nombre" Binding="{Binding Nombre}"/>
                                        <DataGridTextColumn Header="apellidos" Binding="{Binding Apellidos}"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <DataGrid x:Name="dgvGrupos" Margin="10,41,539,99" AutoGenerateColumns="false" SelectionChanged="dgvGrupos_SelectionChanged" Grid.RowSpan="2">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" Binding="{Binding IdGrupo}"/>
                                        <DataGridTextColumn Header="Curso" Binding="{Binding Nombre}"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <Button Content="añadir" HorizontalAlignment="Left" VerticalAlignment="Top" Width="71" Click="btnAsignar_Click" Margin="393,82,0,0" Grid.Row="1" Height="29"/>
                                <Label Content="Alumnado no asignado" HorizontalAlignment="Left" Margin="220,10,0,0" VerticalAlignment="Top"/>
                                <Label Content="Alumnado seleccionados" HorizontalAlignment="Left" Margin="439,10,0,0" VerticalAlignment="Top"/>
                                <Label Content="NOMBRE GRUPO (seleccionado)" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top"/>

                            </Grid>

                        </TabItem>


                    </TabControl>
                </Grid>


            </TabItem>


            <TabItem Header="Empresas"></TabItem>



            <TabItem Header="Retos"></TabItem>


            <TabItem Header="Talent Lab"></TabItem>


            <TabItem Header="Usuarios"></TabItem>


        </TabControl>
        <Label Content="¿ACEPTAS EL RETO?" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36"/>

    </Grid>
</Window>
