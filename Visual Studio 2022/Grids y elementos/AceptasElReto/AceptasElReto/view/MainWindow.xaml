<Window x:Class="AceptasElReto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AceptasElReto"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel LastChildFill="True">

        <StackPanel DockPanel.Dock="Left" 
                Orientation="Vertical" 
                Width="100" >

            <Label Content="Participantes" 
               Margin="10" 
               HorizontalAlignment="Center" 
               Foreground="Black" />

            <Label Content="Empresas" 
               Margin="10" 
               HorizontalAlignment="Center" 
               Foreground="Black"/>

            <Label Content="Retos" 
               Margin="10" 
               HorizontalAlignment="Center" 
               Foreground="Black"/>

            <Label Content="Talent Lab" 
               Margin="10" 
               HorizontalAlignment="Center" 
               Foreground="Black"/>

            <Label Content="Usuarios" 
               Margin="10" 
               HorizontalAlignment="Center" 
               Foreground="Black"/>

        </StackPanel>

        <DockPanel DockPanel.Dock="Top" 
               Height="50" 
               LastChildFill="False" 
               Background="LightGray">

            <Label Content="¿ACEPTAS EL RETO?" 
               DockPanel.Dock="Top" 
               Margin="5" 
               FontWeight="Bold"/>

        </DockPanel>

        <Grid>

            <TabControl Grid.Row="1" TabStripPlacement="Top">
                <TabItem Header="Alumnado">
                    <Grid Background="#FFE5E5E5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2.5*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <DataGrid x:Name="dgvPersonas" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="54,59,280,24" SelectionChanged="dgvPersonas_SelectionChange"/>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="btnAdd" Grid.Column="0" Content="Agregar" HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="168" Background="#FFC3CAFF" BorderBrush="Black" BorderThickness="1.5" Click="btnAdd_Click"/>
                            <Button x:Name="btnUpdate" Grid.Column="1" Content="Modificar" HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="168" Background="#FFC3CAFF" BorderBrush="Black" BorderThickness="1.5" Click="btnUpdate_Click"/>
                            <Button x:Name="btnDelete" Grid.Column="2" Content="Eliminar" HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="168" Background="#FFC3CAFF" BorderBrush="Black" BorderThickness="1.5" Click="btnDelete_Click"/>
                        </Grid>
                        <TextBox x:Name="Search" HorizontalAlignment="Left" Margin="54,32,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="358" Height="20"/>
                        <TextBox x:Name="txtNombre"  HorizontalAlignment="Left" Margin="450,93,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                        <TextBox x:Name="txtApellido" HorizontalAlignment="Left" Margin="450,147,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                        <Label x:Name="lbNombre" Content="Nombre" HorizontalAlignment="Left" Margin="450,59,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.596,-0.007"/>
                        <Label x:Name="lbApellidos" Content="Apellidos" HorizontalAlignment="Left" Margin="450,116,0,0" VerticalAlignment="Top"/>
                        <TextBox x:Name="txtCurso"  HorizontalAlignment="Left" Margin="450,193,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                        <Label Content="Curso" HorizontalAlignment="Left" Margin="450,170,0,0" VerticalAlignment="Top"/>

                    </Grid>
                </TabItem>
                <TabItem Header="Grupos">

                </TabItem>
            </TabControl>
        </Grid>

    </DockPanel>
</Window>
