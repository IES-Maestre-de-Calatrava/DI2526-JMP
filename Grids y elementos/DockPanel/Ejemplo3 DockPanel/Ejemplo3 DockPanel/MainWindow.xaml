<Window x:Class="Ejemplo3_DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejemplo3_DockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <DockPanel LastChildFill="False">
        <Button DockPanel.Dock="Top" Height="50" Content="Top"/>
        <Button DockPanel.Dock="Bottom" Height="50" Content="Bottom"/>
        <Button DockPanel.Dock="Left" Width="50" Content="Left"/>
        <Button DockPanel.Dock="Left" Width="50" Content="Left"/>
        <Button DockPanel.Dock="Right" Width="50" Content="Rigth"/>
        <Button DockPanel.Dock="Right" Width="50" Content="Rigth"/>

    </DockPanel>
</Window>
